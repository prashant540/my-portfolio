<h1>Portfolio Items</h1>
<%= link_to "Create New Portfolio",new_portfolio_path%>
<%@portfolios.each do |item|%>
<p><%=link_to item.title, portfolio_path(item)%></p>
<p><%=item.subtitle%></p>
<p><%=item.body%></p>
<%= link_to "Edit", edit_portfolio_path(item.id)%>
<%= link_to "Delete Portfolio",portfolio_path(item), method: :delete, data: {confirm: 'Are you sure?'}%>
<%= image_tag item.thumb_image if item.thumb_image.present?%>
<%end%>